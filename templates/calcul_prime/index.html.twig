{% extends 'base.html.twig' %}

{% block title %}Hello CalculPrimeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <ul>
        {% for fiche in calculPrime %}
            <li>{{ fiche.id }} - Montant validé = {{ fiche.montantValide }} -  Prime = {{  fiche.montantValide * 0.095 }}</li>
        {% endfor %}
    </ul>
    <p>montant cumulé de janvier = {{ calculPrime }}</p>
    <p>montant cumulé de janvier par visiteur = {{ parvisiteur}}</p>
    <p>montant total de Frais Forfait = {{ montantTotal}}</p>

</div>
{% endblock %}
